
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Alteração de Cidade";

    EfinanceCadastro.Models.Cidade cidade = (EfinanceCadastro.Models.Cidade)ViewBag.DadosCidade;
    //EfinanceCadastro.Models.Estado estado = (EfinanceCadastro.Models.Estado)ViewBag.DadosEstado;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>    
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Alteração de Cidade</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Preencha os campos com os dados solicitados
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <form role="form" method="post" action="Edit">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>ID Estado</label>
                                        <input class="form-control" type="number" name="id" id="id" value="@cidade.idCidade" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Nome</label>
                                        <input class="form-control" type="text" name="nome" id="nome" maxlength="60" value="@cidade.nomeCidade" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Estado</label>
                                        <select class="form-control" name="idestado">
                                            @foreach (var estado in ViewBag.DadosEstado)
                                            {
                                                if (estado.idEstado == cidade.idEstado)
                                                {
                                            <option value = "@estado.idEstado" selected> @estado.nomeEstado </option >
                                                }
                                                else
                                                { <option value = "@estado.idEstado" > @estado.nomeEstado </option >}
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Código IBGE</label>
                                        <input class="form-control" type="number" name="codigoibge" id="codigoibge" value="@cidade.codigoIbgeCidade">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <button type="submit" id="editar" value="Edit" class="btn btn-success btn-lg">Alterar</button>
                                        <button type="reset" class="btn btn-warning btn-lg">Limpar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="@Url.Content("~/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/vendor/met3isMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/dist/js/sb-admin-2.js")"></script>
    <script src="@Url.Content("~/Script/input-mask.min.js")"></script>
    <script src="@Url.Content("~/Scripts/input-mask.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>

</body>
</html>
